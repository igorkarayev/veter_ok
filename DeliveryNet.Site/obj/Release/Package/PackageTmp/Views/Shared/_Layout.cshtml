@using Delivery.ViewModels.Home
@model Delivery.ViewModels.Shared.LayoutViewModel
@{
    var title = Model.MainTitle;
    if (!string.IsNullOrEmpty(ViewBag.Title))
    {
        title = ViewBag.Title;
    }
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@(title + " | " + Model.Slogan)</title>
        <link rel="icon" type="image/png" href="~/Content/favicon.png"/>

        @Styles.Render("~/Content/bootstrap.min.css")
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/media.css")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/Scripts/mask.js")
        @Scripts.Render("~/Scripts/bootstrap.js")
        @Scripts.Render("~/Scripts/scripts.js")
    </head>
<body>
    <div id="header" class="row">
        <div id="logo" class="col-xs-3 col-md-2">
            <a href="~/" class="logo-link">
                <div class="logo">
                </div>
            </a>
        </div>
        <div id="info" class="col-xs-5 col-md-7">
            <div class="col-md-6 slogan">@Model.Slogan</div>
            <div class="col-md-6 contacts-block">
                <span> Skype: <a href="@string.Format("skype:{0}", Model.Skype)"><b>@Model.Skype</b></a></span>
                <span>Tелефоны: <b style="float: right;">@Html.Raw(Model.FooterPhones)</b></span>
            </div>
        </div>
        <div id="login" class="col-xs-4 col-md-3 pull-right">
            <div class="signin">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div id="container">
        <div id="content">
            <div id="leftblock" class="col-md-3 col-xs-12">
                <div id="menu" class="col-xs-5 col-md-12">
                    <div id="top-menu">
                        <a href="~/" class="menu_index">Главная</a>
                        <a href="~/city" class="menu_city">Города доставки</a>
                        <a href="~/contacts" class="menu_contacts">Контакты</a>
                        <a href="~/aboutus" class="menu_about">О нас</a>
                    </div>
                </div>
                <div class="check-status col-xs-6 col-xs-offset-1 col-md-offset-0 col-md-12">
                    @Html.Partial("_CheckStatus", new CheckStatus())
                </div>
                <div class="news-block col-sm-12 hidden-sm hidden-xs">
                    @{Html.RenderAction("Stream", "News");}
                </div>
            </div>
            <div id="page-content" class="col-md-6 col-xs-12">
                @RenderBody()
            </div>
            <div id="car-photo" class="col-md-3 hidden-sm hidden-xs">
            </div>
        </div>
        <div class="footer">
            <div class="footer-body col-xs-12">
                <div style="padding: 15px 15px 0 15px; font-size: 12px">
                    <div class="footer-text-color" style="width: 230px; display: inline-block">
                        <b style="font-size: 14px;">Контакты</b>
                        <div style="padding-left: 10px; margin-top: 10px;">
                            <table>
                                <tbody>
                                    <tr>
                                        <td>
                                            MTC
                                        </td>
                                        <td>
                                            <b>+375 (33) 319-25-51</b>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Velcom
                                        </td>
                                        <td>
                                            <b>+375 (29) 319-25-51</b>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Городской
                                        </td>
                                        <td>
                                            <b>8 (017) 291-89-34</b>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="vertical-align: top">
                                            Skype:
                                        </td>
                                        <td>
                                            <b><a href="@string.Format("skype:{0}", Model.Skype)" rel="nofollow">Grundex.by</a></b><br>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="vertical-align: top">
                                            E-mail:
                                        </td>
                                        <td>
                                            <b><a href="@string.Format("mailto:{0}", Model.FooterEmail)" rel="nofollow">@Model.FooterEmail</a></b><br>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="vertical-align: top">
                                            Время работы:
                                        </td>
                                        <td>
                                            <b>14:00-23:00</b><br>
                                            <i>(склад и офис)</i>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="footer-text-color" style="width: 210px; display: inline-block; vertical-align: top">
                        <b style="font-size: 14px;">Почтовый адрес</b>
                        <div style="padding-left: 10px; margin-top: 10px;">
                            220024 Беларусь, г. Минск, ул. Бабушкина, д. 4а, ком. 1<br>
                        </div>
                    </div>
                    <div class="footer-text-color" style="width: 150px; display: inline-block; vertical-align: top">
                        <b style="font-size: 14px;">Юр. адрес</b>
                        <div style="padding-left: 10px; margin-top: 10px;">
                            222720 Беларусь, Минская обл., г. Дзержинск, ул. Строителей, д.2, ком. 2В<br>
                        </div>
                    </div>

                    <div class="footer-text-color" style="width: 190px; display: inline-block; vertical-align: top">

                        <b style="font-size: 14px;">Реквизиты</b>
                        <div style="padding-left: 10px; margin-top: 10px;">
                            ООО "Грундекс"<br>
                            МФО 153001226<br><br>

                            Р/с: 3012011753001 в ОАО «Банк БелВЭБ», г. Минск,<br>
                        </div>
                    </div>
                </div>
            </div>
            <div class="counter col-md-2 col-md-offset-5 col-xs-12 col-xs-offset-0">
                <!--LiveInternet counter-->
                <script type="text/javascript">
                    document.write("<a href='//www.liveinternet.ru/click' " +
                        "target=_blank><img src='//counter.yadro.ru/hit?t14.9;r" +
                        escape(document.referrer) + ((typeof (screen) == "undefined") ? "" :
                            ";s" + screen.width + "*" + screen.height + "*" + (screen.colorDepth ?
                                screen.colorDepth : screen.pixelDepth)) + ";u" + escape(document.URL) +
                        ";h" + escape(document.title.substring(0, 80)) + ";" + Math.random() +
                        "' alt='' title='LiveInternet: показано число просмотров за 24" +
                        " часа, посетителей за 24 часа и за сегодня' " +
                        "border='0' width='88' height='31'><\/a>")
                </script><!--/LiveInternet-->
            </div>
        </div>
    </div>
</body>
</html>
