@using DeliveryNet.Data
@model Delivery.ViewModels.Home.CityViewModel 
@{
    ViewBag.Title = string.Format("{0}", Model.PageInfo.PageTitle);
}
<div class="breadcrumbs">
    <span class="current-page">@Model.PageInfo.PageTitle</span>
</div>
<div>
    @Html.Raw(Model.PageInfo.Content)
    <div class="delivery-city">
        <table class="table tableViewClass tableClass table-striped">
            <tr class="table-header">
                <th colspan="5" style="text-align: center;">
                    Список основных населенных пунктов, в которые осуществляется доставка
                </th>
            </tr>
            <tr class="table-header">
                <th style="text-align: left">
                    Населенный пункт
                </th>
                <th style="text-align: left">
                    Район
                </th>
                <th style="text-align: left">
                    Область
                </th>
                <th style="text-align: left">
                    Дни доставки
                </th>
            </tr>
            @foreach (var city in Model.City)
            {
                <tr class="table-item-template">
                    <td>
                        @city.CityName
                    </td>
                    <td>
                        @city.DistrictName
                    </td>
                    <td>
                        @City.GetRegionName(Convert.ToInt32(city.RegionId))
                    </td>
                    <td>
                        @if (city.Monday == 1)
                        {
                            @:пн. 
                        }

                        @if (city.Tuesday == 1)
                        {
                            @:вт.
                        }

                        @if (city.Wednesday == 1)
                        {
                            @:ср.
                        }

                        @if (city.Thursday == 1)
                        {
                            @:чт.
                        }

                        @if (city.Friday == 1)
                        {
                            @:пт.
                        }

                        @if (city.Saturday == 1)
                        {
                            @:сб.
                        }

                        @if (city.Sunday == 1)
                        {
                            @:вс.
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div>
        Доставка без дополнительной оплаты производится так же в населенные пункты из списка:
        <div style="padding-left: 15px; font-style: italic">
            @foreach (var city in Model.CityCompanions)
            {
                <span>@city.CityName (@city.DistrictName р/н)</span>@:,
            }
        </div>
    </div>
</div>
<script>
    $(function () {
        $(".menu_city").addClass("selected");
    })
</script>