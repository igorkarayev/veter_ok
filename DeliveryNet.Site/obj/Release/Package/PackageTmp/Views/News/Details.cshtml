@using PagedList
@using PagedList.Mvc
@model Delivery.ViewModels.News.DetailsViewModel

<div class="news">
    <div class="news-strem-title">
        @Model.News.Title
    </div>
    <div class="news-strem-body">
        @Html.Raw(Model.News.Body)
    </div>
    <div class="parable-item-footer">
        <div class="pull-right">
            <span class="news-strem-date"><i class="fa fa-calendar"></i>@Convert.ToDateTime(Model.News.CreateDate).ToString("dd MMMM yyyy")</span>
            <span class="news-strem-time"><i class="fa fa-clock-o"></i>@Convert.ToDateTime(Model.News.CreateDate).ToString("HH:mm")</span>
            <!--a href="#" onclick="javascript: history.go(-1);" class="btn btn-default btn-right read-more">Назад</a-->
        </div>
    </div>
</div>
<script>
    $(function() {
        $(".menu_index").addClass("selected");
    })
</script>